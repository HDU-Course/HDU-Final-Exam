	// 取消重命名
	$("#tableId02 .rename .no").live("click",function() {
		if ($(this).parent().parent().parent().find("input").eq(0).attr("value") == "") {
			$(this).parent().parent().parent().remove();
			mark = 1;
			return false;
		}
		rename($(this).parent().parent().parent(), true);
	});
	
